{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleSuffixes": ["", ".js", ".jsx", ".ts", ".tsx"],

    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": false,
    "declaration": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node",
    "require": ["tsconfig-paths/register"]
  },
  "files": ["./global.d.ts"]
}
